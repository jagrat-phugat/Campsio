<% layout("layouts/boilerplate") %>
<div id="cluster-map"></div>
    <h1 class="mt-4">All Hotels</h1>
    <% for(let hotel of hotels) { %>
        <div class="card mb-4">
            <div class="row">
                <div class="col-md-4">
                    <% if(hotel.image.length) { %> 
                        <img src="<%=hotel.image[0].url%>" alt="" class="img-fluid">
                    <% } else { %>
                        <img src="https://res.cloudinary.com/dsuoqau8g/image/upload/v1649696352/Campsio/z8fzpmo9j3kwd3v61nyc.jpg" alt="" class="img-fluid">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=hotel.title%>
                        </h5>
                        <p class="card-text">
                            <%=hotel.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=hotel.location%>
                            </small>
                        </p>
                        <a href="hotels/<%=hotel._id%>" class="btn btn-primary">View <%=hotel.title%></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        
  <script>
    const mapToken = "<%- process.env.MAPBOX_TOKEN%>";
    const hotels = {features: <%- JSON.stringify(hotels) %>}
  </script>

<script src="/javascripts/clusterMap.js"></script>